<h1>Create an Event</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @event do |f| %>
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>

      <%= f.label :description, 'Description' %>
      <%= f.text_field :description %>

      <%= f.label :date, 'Date' %>
      <%= f.date_field :date %>

      <%= f.label :location, 'Location' %>
      <%= f.text_field :location %>

      <%= f.submit 'Create event', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>